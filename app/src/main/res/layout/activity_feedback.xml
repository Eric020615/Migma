<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackActivity">

    <!--Background-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fragment_feedback_page_background">


        <TextView
            android:id="@+id/TV1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:text="Your feedback can help to improve our services!" />

        <EditText
            android:id="@+id/ET1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:ems="10"
            android:inputType="textPersonName"

            android:background="@drawable/fragment_feedback_page_edittext_background"
            android:scaleType="centerCrop"

            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"

            android:gravity="center|top"
            android:textSize="15dp"
            android:textColorHint="#B8B8B8"
            android:hint="Type Something..........................................." />

        <!--BottomPart-->
        <LinearLayout
            android:id="@+id/bottomPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/fragment_feedback_page_button_rectangle_with_radius"

                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:text="Submit"
                android:textColor="#fff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/TV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>