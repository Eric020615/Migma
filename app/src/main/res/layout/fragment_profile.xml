<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_page_background2"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_picture_IV"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/profile_photo_shape"
                android:src="@drawable/profile_man_photo_profile" />

            <TextView
                android:id="@+id/name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_picture_IV"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Eng Jun Cheng"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/role_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_TV"
                android:layout_alignTop="@id/gender_TV"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/gender_TV"
                android:text="Student of UM"
                android:textColor="#CEC3C3"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/specialuse"
                android:layout_below="@+id/name_TV"
                android:layout_alignTop="@+id/gender_TV"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/gender_TV"
                android:text=" | "
                android:textColor="#CEC3C3"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/gender_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_TV"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Male"
                android:textColor="#CEC3C3"
                android:textSize="12dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_TV"
                android:layout_alignTop="@+id/gender_TV"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/gender_TV"
                android:text=" | "
                android:textColor="#CEC3C3"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/age_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_TV"
                android:layout_alignTop="@+id/gender_TV"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/gender_TV"
                android:text="20 years old"
                android:textColor="#CEC3C3"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/height_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/weight_TV"
                android:layout_gravity="center"
                android:layout_alignEnd="@id/specialuse"
                android:layout_marginRight="50dp"
                android:text="175 cm"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/w"
                android:layout_gravity="center"
                android:layout_marginRight="75dp"
                android:layout_toLeftOf="@+id/w"
                android:text="Height"
                android:textColor="#CEC3C3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/weight_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/role_TV"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="65 kg"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weight_TV"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:text="Weight"
                android:textColor="#CEC3C3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bloodtype_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/bloodtype_tv"
                android:layout_alignStart="@id/bloodtype_tv"
                android:layout_marginLeft="20dp"
                android:text="O"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/bloodtype_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/w"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@+id/w"
                android:text="Blood Type"
                android:textColor="#CEC3C3"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp">

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/profile_settings_icon"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/edit_profile_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/profile_modify_icon"
                android:layout_marginRight="20dp"
               />

            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/profile_police_icons"
                />




        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_backgrounds">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="10pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15pt">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_user_icons"
                        android:background="@drawable/profile_icon_container"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5pt"
                        android:text="Identification Card"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_right_button"
                        android:layout_gravity="center"
                        android:layout_marginLeft="70pt"/>
                </LinearLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E4E4E6"
                    android:layout_marginLeft="17pt"
                    android:layout_marginRight="17pt"
                    />

                <LinearLayout
                    android:layout_marginTop="5pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15pt">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_car_button"
                        android:background="@drawable/profile_icon_container"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5pt"
                        android:text="Driving License     "
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_right_button"
                        android:layout_gravity="center"
                        android:layout_marginLeft="70pt"/>
                </LinearLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E4E4E6"
                    android:layout_marginLeft="17pt"
                    android:layout_marginRight="17pt"
                    />

                <LinearLayout
                    android:layout_marginTop="5pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15pt">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_calculator_button"
                        android:background="@drawable/profile_icon_container"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5pt"
                        android:text="Finance and Taxation"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_right_button"
                        android:layout_gravity="center"
                        android:layout_marginLeft="63pt"/>
                </LinearLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E4E4E6"
                    android:layout_marginLeft="17pt"
                    android:layout_marginRight="17pt"
                    />

                <LinearLayout
                    android:id="@+id/medicalrecord_btn"
                    android:layout_marginTop="5pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15pt">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_medical_record_button"
                        android:background="@drawable/profile_icon_container"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5pt"
                        android:text="Medical Record     "
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_right_button"
                        android:layout_gravity="center"
                        android:layout_marginLeft="70pt"/>
                </LinearLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E4E4E6"
                    android:layout_marginLeft="17pt"
                    android:layout_marginRight="17pt"
                    />

                <LinearLayout
                    android:layout_marginTop="5pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15pt"
                    android:layout_marginBottom="10pt">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_information_button"
                        android:background="@drawable/profile_icon_container"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5pt"
                        android:text="Information           "
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_right_button"
                        android:layout_gravity="center"
                        android:layout_marginLeft="70pt"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


