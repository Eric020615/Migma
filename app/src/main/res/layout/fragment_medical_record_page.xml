<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicalRecordPage"
    android:background="#f1f1f1">

    <!--Top Part-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:orientation="vertical"
        android:background="#6CACE4">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            tools:src="@drawable/fragment_medical_record_page_menu_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
        
        <TextView
            android:layout_width="180dp"
            android:layout_height="90dp"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"

            android:textStyle="bold"
            android:textColor="#130F26"
            android:textSize="36dp"
            android:lineSpacingExtra="5dp"
            android:text="Your Body Problems"/>

        <TextView
            android:id="@+id/TV_diseases"
            android:layout_width="180dp"
            android:layout_height="44dp"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"

            android:textStyle="bold"
            android:textColor="#130F26"
            android:textSize="36dp"
            android:text="04"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="32dp"

            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"

            android:textStyle="bold"
            android:textColor="#8E8E8E"
            android:textSize="24dp"
            android:text="Diseases"/>

        <TextView
            android:id="@+id/TV_medication"
            android:layout_width="180dp"
            android:layout_height="44dp"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"

            android:textStyle="bold"
            android:textColor="#130F26"
            android:textSize="36dp"
            android:text="13"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="32dp"

            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"

            android:textStyle="bold"
            android:textColor="#8E8E8E"
            android:textSize="24dp"
            android:text="Medications"/>
    </LinearLayout>

    <!--Right Side Image-->
    <ImageView
        android:layout_width="275dp"
        android:layout_height="325dp"
        android:background="@drawable/fragment_medical_record_page_human"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="50dp"/>

    <!--Middle Part-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_marginTop="395dp"
        android:layout_marginLeft="20dp"
        android:gravity="left"

        android:textSize="24dp"
        android:textColor="#130F26"
        android:textStyle="bold"
        android:text="Disease History"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_marginTop="385dp"
        android:layout_marginRight="20dp"
        android:gravity="right"

        android:textSize="16dp"
        android:textColor="#130F26"
        android:textStyle="bold"
        android:text="@string/use_underline"/>

    <!--Bottom Part-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="295dp"
            android:orientation="vertical"
            android:layout_marginTop="435dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/fragment_medical_record_page_doctor_background">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/fragment_medical_record_page_calendar_background"
                android:layout_marginLeft="42.5dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/fragment_medical_record_page_calendar_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"

                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"

                    android:textColor="#000"
                    android:textSize="16dp"
                    android:text="20 Jan 2023"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/fragment_medical_record_page_doctor"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"

                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"

                        android:textColor="#000"
                        android:textSize="12dp"
                        android:text="Neurologist"/>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"

                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"

                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:text="Dr. Roman Reigns"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="120dp"
                android:layout_height="36dp"

                android:gravity="center"

                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20dp"
                android:text="Brain MRI"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/fragment_medical_record_page_observe_picture"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="295dp"
            android:orientation="vertical"
            android:layout_marginTop="435dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/fragment_medical_record_page_doctor_background">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/fragment_medical_record_page_calendar_background"
                android:layout_marginLeft="42.5dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/fragment_medical_record_page_calendar_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"

                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"

                    android:textColor="#000"
                    android:textSize="16dp"
                    android:text="23 Jan 2023"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/fragment_medical_record_page_doctor2"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"

                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"

                        android:textColor="#000"
                        android:textSize="12dp"
                        android:text="Neurologist"/>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"

                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"

                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:text="Dr. Aisha Takya"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="120dp"
                android:layout_height="36dp"

                android:gravity="center"

                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20dp"
                android:text="CT Angiography"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/fragment_medical_record_page_observe2_picture"
                />

        </LinearLayout>
    </TableRow>


</FrameLayout>