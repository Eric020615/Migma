<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatPage">


    <!--Background-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#030C1A">


        <!--Top Part-->
        <LinearLayout
            android:id="@+id/topPart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/voice_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon"
                android:layout_marginTop="5pt"
                android:layout_marginLeft="5pt"
                android:layout_marginBottom="25pt"/>

            <ImageButton
                android:id="@+id/center_voice_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/voice_button"
                android:background="@color/black"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_marginTop="15pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/voice_waves"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, Iâ€™m Jynx. What can I help you."
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"/>




        </LinearLayout>





    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>