<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicalHomePage">


    <!--Background-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#002664">

        <!--First Text-->
        <LinearLayout
            android:id="@+id/firstPart"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/TV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="34dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Electronic" />

            <TextView
                android:id="@+id/TV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="34dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Health Record" />

        </LinearLayout>

        <!--Second Text-->
        <LinearLayout
            android:id="@+id/SecondPart"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/TV3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:textSize="16dp"
                android:textColor="#fff"
                android:text="View patientsâ€™ data their medical history," />

            <TextView
                android:id="@+id/TV4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"


                android:textSize="16dp"
                android:textColor="#fff"
                android:text="personal information, previous visits, test " />

            <TextView
                android:id="@+id/TV5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:textSize="16dp"
                android:textColor="#fff"
                android:text="results and health conditions." />

        </LinearLayout>

        <!--Last Part-->
        <LinearLayout
            android:id="@+id/LastPart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@drawable/fragment_medical_home_page_human_picture" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>